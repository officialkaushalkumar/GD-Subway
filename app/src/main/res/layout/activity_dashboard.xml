        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00ACC1"
                    android:id="@+id/rel_foodtales">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/food_tales"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:text="Food Tales"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:fontFamily="aclonica" />

                    <ImageView
                        android:id="@+id/food_tales"
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/food_tales" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00ACC1"
                    android:id="@+id/rel_fruitsandjuice">

                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fruits"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="Fruits and juice"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:fontFamily="aclonica" />

                    <ImageView
                        android:id="@+id/fruits"
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/fruits" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00ACC1"
                    android:id="@+id/rel_brijwasiexpress">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/brijwasi"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="BrijwasiExpress"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:fontFamily="aclonica" />

                    <ImageView
                        android:id="@+id/brijwasi"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/brijwasi" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00ACC1"
                    android:id="@+id/rel_mastertandoor">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tandoor"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Master Tandoor"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        app:fontFamily="aclonica" />

                    <ImageView
                        android:id="@+id/tandoor"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/tandoor" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:id="@+id/rel_thegreenside"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00ACC1">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/green"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="The Green Side"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:fontFamily="aclonica" />

                    <ImageView
                        android:id="@+id/green"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/green" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:id="@+id/rel_fusionbistro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00ACC1">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fusion"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="FusionBistro"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:fontFamily="aclonica" />

                    <ImageView
                        android:id="@+id/fusion"
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/fusion" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
